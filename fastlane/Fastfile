default_platform(:ios)

platform :ios do
  before_all do
    # Clean DerivedData to prevent conflicts
    sh "rm -rf ~/Library/Developer/Xcode/DerivedData"
  end

  lane :test do
    run_tests(
      project: "Palace.xcodeproj",
      devices: ["iPhone 12 Pro"],
      scheme: "Palace",
      derived_data_path: "./DerivedData",
      clean: true
    )
  end

  lane :nodrm do
    build_app(
      project: "Palace.xcodeproj",
      scheme: "Palace-noDRM",
      skip_package_ipa: true,
      skip_archive: true,
      skip_codesigning: true,
      silent: true,
      clean: true
    )
  end

  lane :beta do |options|
    build_app(
      project: "Palace.xcodeproj",
      scheme: "Palace",
      include_symbols: true,
      include_bitcode: false,
      silent: true,
      clean: true,
      output_name: options[:output_name],
      output_directory: options[:export_path],
      export_options: {
        method: "ad-hoc",
        provisioningProfiles: {
          "org.thepalaceproject.palace" => "Ad Hoc 2"
        }
      }
    )
  end

  lane :appstore do |options|
    build_app(
      project: "Palace.xcodeproj",
      scheme: "Palace",
      include_symbols: true,
      include_bitcode: false,
      clean: true,
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "org.thepalaceproject.palace" => "App Store 2"
        }
      }
    )
    pilot(
      api_key_path: "fastlane/fastlane.json",
      skip_submission: true,
      changelog: options[:changelog]
    )
  end

  after_all do
    slack(
      message: "All lanes completed successfully!"
    )
  end

  error do |lane, exception|
    slack(
      message: "Lane #{lane} failed with error: #{exception.message}"
    )
  end
end
